{
  "name": "skill-organizer-extension",
  "displayName": "Skill Organizer",
  "description": "Import and manage reusable AI skills from GitHub repos, skills.sh URLs, and local folders.",
  "version": "0.0.10",
  "publisher": "unthinkmedia",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/unthinkmedia/skill_organizer.git"
  },
  "homepage": "https://github.com/unthinkmedia/skill_organizer/tree/main/skill-organizer-extension",
  "bugs": {
    "url": "https://github.com/unthinkmedia/skill_organizer/issues"
  },
  "keywords": [
    "vscode",
    "extension",
    "skills",
    "github",
    "copilot"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon-128.png",
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skillOrganizer",
          "title": "Skill Organizer",
          "icon": "media/skill-organizer.svg"
        }
      ]
    },
    "views": {
      "skillOrganizer": [
        {
          "id": "skillOrganizer.skills",
          "name": "Skills",
          "icon": "media/skill-organizer.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "skillOrganizer.addSource",
        "title": "Add Source",
        "category": "Skill Organizer",
        "icon": "$(add)"
      },
      {
        "command": "skillOrganizer.addGitHubSource",
        "title": "Add GitHub Source",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.addFromSkillsSh",
        "title": "Add from skills.sh URL",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.chooseGitHubAccount",
        "title": "Choose GitHub Account",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.removeSource",
        "title": "Remove Source",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/trash-light.svg",
          "dark": "media/trash-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.refresh",
        "title": "Refresh Skills",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.toggleSkill",
        "title": "Enable or Disable Skill",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.freezeSkill",
        "title": "Freeze Skill",
        "category": "Skill Organizer",
        "icon": "$(lock)"
      },
      {
        "command": "skillOrganizer.unfreezeSkill",
        "title": "Unlock Skill",
        "category": "Skill Organizer",
        "icon": "$(unlock)"
      },
      {
        "command": "skillOrganizer.removeFromWorkspace",
        "title": "Remove from Workspace Enabled",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/trash-light.svg",
          "dark": "media/trash-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.removeFromGlobalDefaults",
        "title": "Remove from Global Defaults",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/trash-light.svg",
          "dark": "media/trash-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.setGlobalDefault",
        "title": "Toggle Global Default",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/star-outline-light.svg",
          "dark": "media/star-outline-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.unsetGlobalDefault",
        "title": "Toggle Global Default",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/star-light.svg",
          "dark": "media/star-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.applyGlobalProfile",
        "title": "Apply Global Profile to Workspace",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.syncWorkspaceSkills",
        "title": "Apply Sync (Overwrite Managed Skills)",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.markManual",
        "title": "Detach from Source",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.markManaged",
        "title": "Reconnect to Source",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.uninstallSkill",
        "title": "Remove Local Skill",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/trash-light.svg",
          "dark": "media/trash-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.updateManagedSkill",
        "title": "Update Managed Skill",
        "category": "Skill Organizer",
        "icon": "$(refresh)"
      },
      {
        "command": "skillOrganizer.explainMissingSkill",
        "title": "Resolve Missing Skill",
        "category": "Skill Organizer",
        "icon": {
          "light": "media/lightbulb-light.svg",
          "dark": "media/lightbulb-dark.svg"
        }
      },
      {
        "command": "skillOrganizer.extendAgents",
        "title": "Extend AGENTS.md",
        "category": "Skill Organizer"
      },
      {
        "command": "skillOrganizer.explainConflict",
        "title": "Explain Conflict",
        "category": "Skill Organizer"
      }
    ],
    "configuration": {
      "title": "Skill Organizer",
      "properties": {
        "skillOrganizer.destinationPath": {
          "type": "string",
          "default": ".github/skills",
          "description": "Workspace-relative path where enabled skills are copied as local skills."
        },
        "skillOrganizer.materializationMode": {
          "type": "string",
          "enum": [
            "copy"
          ],
          "default": "copy",
          "description": "How skills are copied into local workspace folders. V1 supports copy mode only."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "skillOrganizer.addSource",
          "when": "view == skillOrganizer.skills",
          "group": "navigation"
        },
        {
          "command": "skillOrganizer.chooseGitHubAccount",
          "when": "view == skillOrganizer.skills",
          "group": "2_actions@1"
        },
        {
          "command": "skillOrganizer.removeSource",
          "when": "view == skillOrganizer.skills",
          "group": "2_actions@2"
        },
        {
          "command": "skillOrganizer.refresh",
          "when": "view == skillOrganizer.skills",
          "group": "2_actions@3"
        },
        {
          "command": "skillOrganizer.extendAgents",
          "when": "view == skillOrganizer.skills",
          "group": "2_actions@4"
        },
        {
          "command": "skillOrganizer.applyGlobalProfile",
          "when": "view == skillOrganizer.skills",
          "group": "2_actions@5"
        },
        {
          "command": "skillOrganizer.syncWorkspaceSkills",
          "when": "view == skillOrganizer.skills",
          "group": "2_actions@6"
        }
      ],
      "view/item/context": [
        {
          "command": "skillOrganizer.removeSource",
          "when": "view == skillOrganizer.skills && viewItem == sourceItem",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.toggleSkill",
          "when": "view == skillOrganizer.skills && viewItem == sourceSkillItem",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.freezeSkill",
          "when": "view == skillOrganizer.skills && viewItem == sourceSkillItem",
          "group": "navigation"
        },
        {
          "command": "skillOrganizer.unfreezeSkill",
          "when": "view == skillOrganizer.skills && viewItem == sourceSkillItemFrozen",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.setGlobalDefault",
          "when": "view == skillOrganizer.skills && viewItem == sourceSkillItem",
          "group": "navigation"
        },
        {
          "command": "skillOrganizer.removeFromWorkspace",
          "when": "view == skillOrganizer.skills && viewItem == workspaceSkillItem",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.setGlobalDefault",
          "when": "view == skillOrganizer.skills && viewItem == workspaceSkillItem",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.removeFromWorkspace",
          "when": "view == skillOrganizer.skills && viewItem == workspaceSkillItemGlobal",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.unsetGlobalDefault",
          "when": "view == skillOrganizer.skills && viewItem == workspaceSkillItemGlobal",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.removeFromGlobalDefaults",
          "when": "view == skillOrganizer.skills && viewItem == globalSkillItem",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.explainMissingSkill",
          "when": "view == skillOrganizer.skills && (viewItem == missingWorkspaceSkillItem || viewItem == missingGlobalSkillItem)",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.updateManagedSkill",
          "when": "view == skillOrganizer.skills && viewItem == materializedManagedSkillItem",
          "group": "inline"
        },
        {
          "command": "skillOrganizer.markManual",
          "when": "view == skillOrganizer.skills && viewItem == materializedManagedSkillItem",
          "group": "navigation"
        },
        {
          "command": "skillOrganizer.markManaged",
          "when": "view == skillOrganizer.skills && viewItem == materializedManualSkillItem",
          "group": "navigation"
        },
        {
          "command": "skillOrganizer.uninstallSkill",
          "when": "view == skillOrganizer.skills && (viewItem == materializedManagedSkillItem || viewItem == materializedManualSkillItem)",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "skillOrganizer.addGitHubSource",
          "when": "false"
        },
        {
          "command": "skillOrganizer.addFromSkillsSh",
          "when": "false"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "skillOrganizer.skills",
        "contents": "No sources configured yet. [Add your first source](command:skillOrganizer.addSource)"
      },
      {
        "view": "skillOrganizer.skills",
        "contents": "Use the ... actions menu for refresh, profile apply, and workspace sync."
      }
    ]
  },
  "scripts": {
    "sync:readme": "node -e \"const fs=require('fs');let s=fs.readFileSync('../README.md','utf8');s=s.replaceAll('./skill-organizer-extension/media/','./media/');fs.writeFileSync('./README.md',s);\"",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run sync:readme && npm run compile",
    "package": "npx @vscode/vsce package",
    "publish:patch": "npx @vscode/vsce publish patch"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.8.2"
  }
}
